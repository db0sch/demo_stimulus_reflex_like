<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3 text-center">
      <h1>Message Board</h1>
    </div>
  </div>
  <div class="row">
    <% @messages.each do |message| %>
      <div class="col-12 col-md-6 offset-md-3">
        <div class="card mb-2">
          <div class="card-header">
            <span><small><%= message.created_at.strftime("%b %e, %l:%M %p") %></small></span>
          </div>
          <div class="card-body text-right">
            <%= message.content %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <form class="form-inline d-flex" data-controller='message'>
        <div class="form-group mb-2 flex-grow-1">
          <label for="newMessage" class="sr-only">Message</label>
          <input type="text" data-target='message.input' class="form-control w-100" id="newMessages" placeholder="Type your message here... ">
        </div>
        <button type="button" data-action='click->message#send'class="btn btn-primary mb-2 ml-2">Send</button>
      </form>
    </div>
  </div>
</div>
